<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Storyapp" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="colorControlHighlight">#80FFFFFF</item>

        <item name="colorPrimaryVariant">@color/black</item>
    </style>
    <style name="Theme.Storyapp" parent="Base.Theme.Storyapp" />

    <style name="Theme.Storyapp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/tes</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Storyapp</item>
    </style>
</resources>
